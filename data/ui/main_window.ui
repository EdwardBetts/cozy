<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="AdwApplicationWindow" id="app_window">
    <property name="name">main_window</property>
    <property name="icon-name">com.github.geigi.cozy</property>
    <property name="content">
      <object class="GtkStack" id="main_stack">
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="AdwToolbarView">
                <property name="bottom-bar-style">raised</property>
                <property name="content">
                  <object class="AdwNavigationView" id="navigation_view">
                    <child>
                      <object class="AdwNavigationPage">
                        <property name="title">Books</property>
                        <property name="tag">main</property>
                        <child>
                          <object class="AdwToolbarView" id="header_container">
                            <property name="top-bar-style">raised</property>
                            <property name="content">
                              <object class="AdwOverlaySplitView">
                                <property name="sidebar">
                                  <object class="AdwViewStack" id="sort_stack">
                                    <property name="vexpand">true</property>
                                    <child>
                                      <object class="AdwViewStackPage">
                                        <property name="name">recent</property>
                                        <property name="title" translatable="true">Recent</property>
                                        <property name="icon-name">clock-outline-symbolic</property>
                                        <property name="child">
                                          <object class="GtkLabel"><property name="label">Empty</property></object>
                                        </property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwViewStackPage">
                                        <property name="name">author</property>
                                        <property name="title" translatable="true">Author</property>
                                        <property name="icon-name">account-symbolic</property>
                                        <property name="child">
                                          <object class="GtkScrolledWindow" id="sort_author_scroller">
                                            <property name="name">sort_author_scroller</property>
                                            <property name="focusable">true</property>
                                            <property name="hscrollbar-policy">never</property>
                                            <property name="has-frame">true</property>
                                            <property name="child">
                                              <object class="GtkViewport" id="sort_author_viewport">
                                                <child>
                                                  <object class="FilterListBox" id="author_box">
                                                    <property name="visible">true</property>
                                                    <property name="can-focus">false</property>
                                                    <accessibility>
                                                      <property name="label" translatable="true">List of authors</property>
                                                    </accessibility>
                                                    <style>
                                                      <class name="navigation-sidebar"/>
                                                    </style>
                                                  </object>
                                                </child>
                                              </object>
                                            </property>
                                            <style>
                                              <class name="no_frame"/>
                                            </style>
                                          </object>
                                        </property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwViewStackPage">
                                        <property name="name">reader</property>
                                        <property name="title" translatable="true">Reader</property>
                                        <property name="icon-name">microphone-symbolic</property>
                                        <property name="child">
                                          <object class="GtkScrolledWindow" id="sort_reader_scroller">
                                            <property name="focusable">true</property>
                                            <property name="hscrollbar-policy">never</property>
                                            <property name="has-frame">true</property>
                                            <property name="child">
                                              <object class="GtkViewport" id="sort_reader_viewport">
                                                <child>
                                                  <object class="FilterListBox" id="reader_box">
                                                    <property name="visible">True</property>
                                                    <property name="can_focus">False</property>
                                                    <accessibility>
                                                      <property name="label" translatable="true">List of readers</property>
                                                    </accessibility>
                                                    <style>
                                                      <class name="navigation-sidebar"/>
                                                    </style>
                                                  </object>
                                                </child>
                                              </object>
                                            </property>
                                            <style>
                                              <class name="no_frame"/>
                                            </style>
                                          </object>
                                        </property>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                                <property name="content">
                                  <object class="GtkStack" id="book_stack">
                                    <property name="hexpand">true</property>
                                    <property name="hhomogeneous">false</property>
                                    <property name="vhomogeneous">false</property>
                                    <property name="interpolate-size">true</property>
                                    <child>
                                      <object class="GtkStackPage">
                                        <property name="name">books</property>
                                        <property name="child">
                                          <object class="GtkScrolledWindow" id="book_scroller">
                                            <property name="focusable">true</property>
                                            <property name="hexpand">true</property>
                                            <property name="hscrollbar-policy">never</property>
                                            <property name="has-frame">true</property>
                                            <property name="child">
                                              <object class="GtkViewport" id="books_viewport">
                                                <property name="vscroll-policy">natural</property>
                                                <property name="hscroll-policy">minimal</property>
                                                <property name="child">
                                                  <object class="GtkFlowBox" id="book_box">
                                                    <property name="margin-top">10</property>
                                                    <property name="margin-bottom">10</property>
                                                    <property name="hexpand">true</property>
                                                    <property name="vexpand">true</property>
                                                    <property name="homogeneous">true</property>
                                                    <property name="column-spacing">10</property>
                                                    <property name="row-spacing">5</property>
                                                    <property name="min-children-per-line">1</property>
                                                    <property name="max-children-per-line">10</property>
                                                    <property name="selection-mode">none</property>
                                                    <accessibility>
                                                      <property name="label" translatable="true">List of books</property>
                                                    </accessibility>
                                                    <style>
                                                      <class name="book_box"/>
                                                    </style>
                                                  </object>
                                                </property>
                                              </object>
                                            </property>
                                            <style>
                                              <class name="no_frame"/>
                                            </style>
                                          </object>
                                        </property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkStackPage">
                                        <property name="name">no_recent</property>
                                        <property name="child">
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="halign">center</property>
                                                <property name="valign">center</property>
                                                <property name="margin-start">15</property>
                                                <property name="margin-end">15</property>
                                                <property name="hexpand">true</property>
                                                <property name="vexpand">true</property>
                                                <property name="label" translatable="true">Start exploring your library by
                                                  switching to the Author or Reader view.
                                                </property>
                                                <property name="wrap">true</property>
                                                <property name="xalign">0</property>
                                                <property name="yalign">0</property>
                                                <style>
                                                  <class name="h2"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </property>
                                      </object>
                                    </child>
                                    <style>
                                      <class name="main_stack"/>
                                    </style>
                                  </object>
                                </property>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwNavigationPage">
                        <property name="title">Book title</property>
                        <property name="tag">book_overview</property>
                        <property name="child">
                          <object class="AdwToolbarView" id="book_details_container">
                            <property name="top-bar-style">raised</property>
                            <child type="top">
                              <object class="AdwHeaderBar"></object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
                <child type="bottom">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="AdwSqueezer" id="media_control_squeezer">
                        <property name="height-request">46</property>
                        <property name="visible">true</property>
                        <property name="can-focus">false</property>
                        <property name="homogeneous">true</property>
                        <property name="transition-type">crossfade</property>
                        <child>
                          <placeholder/>
                        </child>
                        <style>
                          <class name="player_bar"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwViewSwitcherBar" id="library_mobile_view_switcher">
                        <property name="reveal">false</property>
                        <property name="can-focus">false</property>
                        <property name="hexpand">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">import</property>
            <property name="child">
              <object class="GtkBox" id="import_box">
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="margin-start">40</property>
                <property name="margin-end">40</property>
                <property name="orientation">vertical</property>
                <property name="spacing">20</property>
                <child>
                  <object class="GtkImage">
                    <property name="pixel-size">128</property>
                    <property name="icon-name">com.github.geigi.cozy</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="vexpand">true</property>
                    <property name="label" translatable="true">Stay tuned while Cozy is preparing your
                      library…
                    </property>
                    <property name="wrap">true</property>
                    <property name="xalign">0</property>
                    <property name="yalign">0</property>
                    <style>
                      <class name="h2"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">no_media</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="focusable">true</property>
                <property name="hscrollbar-policy">never</property>
                <property name="has-frame">true</property>
                <property name="child">
                  <object class="GtkViewport">
                    <child>
                      <object class="AdwClamp">
                        <property name="visible">true</property>
                        <property name="can-focus">false</property>
                        <property name="maximum-size">700</property>
                        <property name="tightening-threshold">250</property>
                        <child>
                          <object class="GtkBox">
                            <property name="halign">center</property>
                            <property name="valign">center</property>
                            <property name="margin-start">20</property>
                            <property name="margin-end">20</property>
                            <property name="margin-top">40</property>
                            <property name="margin-bottom">40</property>
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="margin-bottom">10</property>
                                <property name="label" translatable="true">Import your Audiobooks</property>
                                <property name="wrap">true</property>
                                <property name="xalign">0</property>
                                <style>
                                  <class name="title-1"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="margin-bottom">85</property>
                                <property name="label" translatable="true">Cozy automatically imports your
                                  audiobooks in one directory - your library
                                </property>
                                <property name="wrap">true</property>
                                <property name="xalign">0</property>
                                <style>
                                  <class name="title-4"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkFrame">
                                <property name="child">
                                  <object class="GtkListBox">
                                    <property name="selection-mode">none</property>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="width-request">100</property>
                                        <property name="height-request">80</property>
                                        <property name="visible">true</property>
                                        <property name="can-focus">false</property>
                                        <property name="activatable">false</property>
                                        <property name="selectable">false</property>
                                        <property name="title" translatable="true">Drag &amp; Drop</property>
                                        <property name="icon-name">input-mouse-symbolic</property>
                                        <property name="subtitle" translatable="true">Drag your audiobooks into
                                          cozy and they will be automatically imported
                                        </property>
                                        <child>
                                          <placeholder/>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkListBoxRow">
                                        <property name="focusable">true</property>
                                        <property name="activatable">false</property>
                                        <property name="selectable">false</property>
                                        <property name="child">
                                          <object class="GtkSeparator"/>
                                        </property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="height-request">80</property>
                                        <property name="visible">true</property>
                                        <property name="can-focus">false</property>
                                        <property name="title" translatable="true">Set Audiobooks Directory
                                        </property>
                                        <property name="icon-name">folder-symbolic</property>
                                        <property name="subtitle" translatable="true">Load audiobooks from a
                                          directory, network drive or an external disk
                                        </property>
                                        <child>
                                          <object class="GtkButton" id="no_media_file_chooser">
                                            <property name="label" translatable="true">Select</property>
                                            <property name="halign">end</property>
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                                <child type="label_item">
                                  <placeholder/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>
